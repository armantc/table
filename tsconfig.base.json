{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tanstack-rtl/table-core": ["packages/table-core/src"],
      "@tanstack-rtl/react-table": ["packages/react-table/src"],
      "@tanstack-rtl/solid-table": ["packages/solid-table/src"],
      "@tanstack-rtl/vue-table": ["packages/vue-table/src"],
      "@tanstack-rtl/svelte-table": ["packages/svelte-table/src"],
      "@tanstack-rtl/react-table-devtools": ["packages/react-table-devtools/src"],
      "@tanstack-rtl/match-sorter-utils": ["packages/match-sorter-utils/src"]
    }
  }
}
